{
  "name": "get-next-version",
  "version": "1.0.0",
  "description": "A GitHub Action for getting the proposed next version of a project for release based on conventional commits",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "prepare": "ncc build index.js -o dist --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run lint && npm run prepare && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ugrc/get-next-version.git"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ugrc/get-next-version/issues"
  },
  "homepage": "https://github.com/ugrc/get-next-version#readme",
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/github": "^5.0.3",
    "conventional-changelog-angular": "^5.0.13",
    "conventional-recommended-bump": "^6.1.0",
    "semver": "^7.3.7"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.23.0",
    "jest": "^29.0.2"
  }
}
